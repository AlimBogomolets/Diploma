@model OnlineStore.Models.UserRolesViewModel
@{
    ViewBag.Title = "EditUser";
}

<div class="panel panel-default">
    <div class="panel-heading panel-title">@ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm("AddRoleToUser", "UserRoles", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName,
                         "Логин пользователя",
                         null)
                    @Html.TextBoxFor(m => m.UserName,
                         new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RoleNames,
                         "Роли пользователя",
                         null)
                    @Html.TextBoxFor(m => m.RoleNames,
                         new
                         {
                             @class = "form-control",
                             @readonly = "readonly"
                         })
                </div>
                <div class="form-group">
                    @Html.Label("Роли пользователя")
                    @Html.DropDownList("roleId",
                     (List<SelectListItem>)ViewBag.Roles,
                     new
                     {
                         @class = "form-control",
                         @id = "roleID"
                     })
                </div>
                <div>
                    <button class="btn btn-default" type="submit">Добавить</button>
                </div>
            </div>
        }
    </div>
</div>
