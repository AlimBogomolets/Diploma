@model IEnumerable<OnlineStore.Models.Product>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .dropbtn {
        border: none;
        background-color: #1d1b1b;
        cursor: pointer;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ec4d37
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #ec4d37;
    }
</style>
@{
    ViewBag.Title = "Index";
}

<h2 style="font-family:fantasy;color:#ec4d37">Список товаров</h2>
<div class="dropdown">
    <button class="dropbtn">
        <a class="btn btn-primary btn-group-sm " style="background-color:#1d1b1b;border-color:#1d1b1b;color:#ec4d37">Создать<i class="fa fa-caret-down" style="color:#ec4d37"></i></a>
    </button>
    <div class="dropdown-content">
        <a href="http://localhost:56170/Product/CreateGPU" >Добавить GPU</a>
        <a href="http://localhost:56170/Product/CreateCPU" >Добавить CPU</a>
        <a href="http://localhost:56170/Product/CreateSSD" >Добавить SSD</a>
        <a href="http://localhost:56170/Product/CreateHDD" >Добавить HDD</a>
        <a href="http://localhost:56170/Product/CreateRAM" >Добавить RAM</a>
    </div>
</div>

<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Image != null)
                {

                    @Html.Raw("<img style='width:150px; height:100px;' src=\"data:image/jpeg;base64,"
                                        + Convert.ToBase64String(item.Image) + "\" />")

                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.ProductId })   |
                @Html.ActionLink("Подробнее", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }

</table>
